{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": ".",
    "outDir": "dist",

    "typeRoots": ["./node_modules/@types", "./@types"],

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "express.d.ts",
    "routes/**/*",
    "controller/**/*",
    "db/**/*",
    "errors/**/*",
    "middleware/**/*",
    "models/**/*",
    "utils/**/*",
    "@types/**/*"
  ],
  "exclude": ["node_modules"]
}
